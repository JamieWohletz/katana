<div class="video-player-slice-parent">
  <div class="video-player-slice-wrapper">
    <div class="video-player-slice-controls left">
      <a
        class="video-player-slice-delete"
        href="#"
        {{action "delete" slice}}
      >
        {{fa-icon "trash"}}
      </a>
    </div>
    <div
      {{action "toggleActive" slice}}
      class="video-player-slice
        {{if active 'active'}}"
      style={{style}}
      title="Click to start/stop playing this clip on repeat."
      >
      {{#if active}}
        <div
          id="video-player-slice-progress-indicator"
          style={{indicatorPositionPercentage}}
        >
        </div>
      {{/if}}
    </div>
  </div>
</div>
