<div class="video-player-slice-parent">
  <div class="video-player-slice-wrapper">
    <div class="video-player-slice-controls left">
      <a
        class="video-player-slice-delete"
        href="#"
        {{action "delete" slice}}
      >
        {{fa-icon "trash"}}
      </a>
      {{video-slice-adjuster
        direction="left"
        action="changePosition"
        icon="fa-arrow-left"
        title=adjustPositionTitle
      }}
      {{video-slice-adjuster
        direction="left"
        action="changeSize"
        icon="fa-minus"
        title=adjustSizeTitle
      }}
    </div>
    <div
      {{action "play" slice}}
      class="video-player-slice
        {{if (eq slice currentSlice) 'active'}}"
      style={{style}}>
      {{#if active}}
        <div
          id="video-player-slice-progress-indicator"
          style={{indicatorPositionPercentage}}
        >
        </div>
      {{/if}}
    </div>
    <div class="video-player-slice-controls right">
      {{video-slice-adjuster
        direction="right"
        action="changeSize"
        icon="fa-plus"
        title=adjustSizeTitle
      }}
      {{video-slice-adjuster
        direction="right"
        action="changePosition"
        icon="fa-arrow-right"
        title=adjustPositionTitle
      }}
    </div>
  </div>
</div>
