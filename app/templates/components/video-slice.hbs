{{#unless hide}}
<div
  {{action "play" slice}}
  class="video-player-slice
    {{if (eq slice currentSlice) 'active'}}"
  style={{style}}>
  {{#if active}}
    <div
      id="video-player-slice-progress-indicator"
      style={{indicatorPositionPercentage}}
    >
    </div>
  {{/if}}
</div>
{{/unless}}
